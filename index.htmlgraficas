<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Graficar Inecuaciones</title>
  <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    input, select, button {
      padding: 10px;
      margin: 5px 0;
      width: 100%;
    }
    #grafico {
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <h2>Graficador de Inecuaciones</h2>

  <label>Expresión (por ejemplo: x**2 + 2*x + 1):</label>
  <input type="text" id="expresion" placeholder="Ejemplo: x**2 + 2*x + 1">

  <label>Tipo de inecuación:</label>
  <select id="tipo">
    <option value="<">y &lt; f(x)</option>
    <option value="<=">y ≤ f(x)</option>
    <option value=">">y &gt; f(x)</option>
    <option value=">=">y ≥ f(x)</option>
  </select>

  <button onclick="graficar()">Graficar</button>

  <div id="grafico"></div>

  <script>
    function graficar() {
      const expr = document.getElementById("expresion").value;
      const tipo = document.getElementById("tipo").value;

      const x = [];
      const y = [];
      const sombra = [];

      // Genera valores de x de -10 a 10
      for (let i = -100; i <= 100; i++) {
        let xi = i / 10;
        try {
          // Evalúa la expresión con x = xi
          let yi = eval(expr.replace(/x/g, `(${xi})`));
          x.push(xi);
          y.push(yi);
        } catch (e) {
          alert("Error en la expresión. Verifica tu sintaxis.");
          return;
        }
      }

      // Sombra para representar la región de la inecuación
      const ymin = Math.min(...y) - 10;
      const ymax = Math.max(...y) + 10;
      const rellenoY = tipo.includes("<") ? ymin : ymax;

      const relleno = {
        x: [...x, ...x.reverse()],
        y: tipo.includes("<") ? [...y, ...Array(y.length).fill(ymin)] : [...y, ...Array(y.length).fill(ymax)],
        fill: "toself",
        fillcolor: "rgba(0, 100, 255, 0.2)",
        line: { color: "transparent" },
        type: "scatter",
        name: "Región",
        showlegend: true
      };

      const curva = {
        x: x,
        y: y,
        mode: "lines",
        name: "f(x)",
        line: { color: "blue" }
      };

      Plotly.newPlot("grafico", [relleno, curva], {
        title: `Gráfico de la inecuación y ${tipo} f(x)`,
        xaxis: { title: "x" },
        yaxis: { title: "y", range: [ymin, ymax] }
      });
    }
  </script>

</body>
</html>
